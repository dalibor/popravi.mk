.block
  .secondary-navigation
    %ul.wat-cf
      = render :partial => 'list'
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_user_path
  .content
    %h2.title #{ t("web-app-theme.all", :default => "All") } Users
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("activerecord.attributes.admin_user.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("activerecord.attributes.admin_user.email", :default => t("activerecord.labels.email", :default => "Email"))
          %th= t("activerecord.attributes.admin_user.municipality", :default => t("activerecord.labels.municipality", :default => "Municipality"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @users.each do |user|
          %tr{:class => cycle("odd", "even")}
            %td= user.id
            %td= link_to user.name, admin_user_path(user)
            %td= user.email
            %td= user.municipality.try(:name)
            %td= user.created_at
            %td.last
              = link_to t("web-app-theme.show", :default => "Show"), admin_user_path(user)
              |
              = link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_user_path(user)
              |
              = link_to t("web-app-theme.delete", :default => "Delete"), admin_user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
      .actions-bar.wat-cf
        .actions
        = will_paginate @users

- content_for :sidebar, render(:partial => 'sidebar')
