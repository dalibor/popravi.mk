.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_regions_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_admin_region_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_region_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Region
    .inner
      = form_for @region, :url => admin_region_path(@region), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
