= render 'shared/error_messages', :resource => @attachment

.group
  = f.label :name, t("activerecord.attributes.attachment.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text

.group
  = f.label :attachment, t("activerecord.attributes.attachment.attachment", :default => "Attachment"), :class => :label
  = f.file_field :attachment, :class => 'file_field'
  %span.description Ex: a simple text

.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_attachments_path, :class => "text_button_padding link_button"
