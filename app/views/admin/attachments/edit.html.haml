.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_attachments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_attachment_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_attachment_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Attachment
    .inner
      = form_for @attachment, :url => admin_attachment_path(@attachment), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
