.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_comments_path
      %li.active= link_to t("web-app-theme.new", :default => "New"), new_admin_comment_path
  .content
    %h2.title #{ t("web-app-theme.new", :default => "New")} Comment
    .inner
      = form_for @comment, :url => admin_comments_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
