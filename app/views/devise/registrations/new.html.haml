- title(t('devise.registrations.title'))

%h2.main_title.wrap600= t('devise.registrations.title')
.step

  = semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
    = f.semantic_errors :state
    .fields-wrapper
      = f.inputs do
        = f.input :email, :label => t('devise.registrations.email'), :required => true
        = f.input :password, :as => :password, :label => t('devise.registrations.password'), :required => true, :wrapper_html => {:class => 'first-half'}
        = f.input :password_confirmation, :as => :password, :label => t('devise.registrations.password_confirmation'), :required => true, :wrapper_html => {:class => 'second-half'}
    = f.actions do
      = f.submit t('devise.registrations.register')

    = render :partial => "shared/devise_links"
