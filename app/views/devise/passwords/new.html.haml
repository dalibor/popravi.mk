- title(t('devise.passwords.reset_title'))

%h2.main_title.wrap600= t('devise.passwords.reset_title')
.step

  = semantic_form_for resource, :as => resource_name, :url => password_path(resource_name) do |f|
    = f.inputs do
      = f.input :email, :label => t('devise.sessions.email')
    = f.actions do
      = f.submit t('devise.passwords.reset_password')

    = render :partial => "shared/devise_links"
